{% extends 'base.html.twig' %}
    {% block title %}{{ parent() }} - {{ city }}{% endblock %}
    {% block body %}
        Ilość pomiarów: {{ mesures|length }}
        {% for mesure in mesures %}
            <br><br>Pomiar nr {{ loop.index }}:<br>
                Miasto: {{ mesure.city }}<br>
                Temperatura: {{ mesure.temperature }}<br>
                Ciśnienie: {{ mesure.pressure }}<br>
                Czas pomiaru: {{ mesure.timestamp|date("Y-m-d h:i:s") }}
        {% else %}
            Nie ma pomiarów.
        {% endfor %}
    {% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('city') }}
{% endblock %}
