<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Prognoza pogody{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('global') }}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Pogodynka</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/weather?city=szczecin">Szczecin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/weather?city=warszawa">Warszawa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/weather?city=opole">Opole</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/weather?city=poznan">Pozna≈Ñ</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0" action="/findCity" method="post">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="city">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </nav>
        {% endblock %}
        {% block body %}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('typescript') }}
        {% endblock %}
    </body>
</html>
